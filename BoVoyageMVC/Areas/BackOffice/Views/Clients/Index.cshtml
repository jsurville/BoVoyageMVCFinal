@model IEnumerable<BoVoyageMVC.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des Clients</h2>

<div id="search">
    <form class="form-group row" action="@Url.Action("Search")" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-md-3">
                <label for="search"> Recherche nom/email/adresse</label>
                <input class="form-control" type="text" id="client" name="search" />
            </div>
            <div class="form-group col-md-2">
                <label for="dateDebut"> Date Naissance après le: </label>
                <input class="form-control" type="text" id="client" name="dateDebut" />
            </div>

            <div class="form-group col-md-2">
                <label for="dateFin"> Date Naissance avant le: </label>
                <input class="form-control" type="text" id="client" name="dateFin" />
            </div>
            <div class="form-group col-md-3">
                <button type="submit" class="btn btn-primary bigBtn">Recherche </button>

            </div>
        </div>
    </form>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FisrtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FisrtName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @item.BirthDate.ToShortDateString())
            </td>


        </tr>
    }


</table>

<a href="@Url.Action("Download","Clients")" class="btn btn-info">Telecharger tous les client </a>
