@model BoVoyageMVC.Models.Voyage

@{
    ViewBag.Title = "Details";
}


<div class="detail">
    <h2>Détails du Voyage @Model.Destination.Country</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AgenceVoyage.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AgenceVoyage.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Destination.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Destination.Country)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartureDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Margin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Margin)
        </dd>

    </dl>
    <div class="row">
        @if (Model.Destination.Images != null)
        {
            foreach (var picture in Model.Destination.Images)
            {
                <div class="col-md-2">
                    <img src="data:@picture.ContentType;base64,@Convert.ToBase64String(picture.Content)" class="img-thumbnail" />
                </div>
            }
        }
    </div>

    <p>
        @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
        @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-default" })
    </p>

</div>




